<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">


    <TextView
        android:id="@+id/welcometxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Welcome To Mybank"
        android:textColor="@color/cardview_dark_background"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/moneyLogo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignBottom="@id/welcometxt"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_baseline_attach_money_24" />

    <Button
        android:id="@+id/btnviewAllCus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moneyLogo"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/money_green_dark"
        android:padding="5dp"
        android:text="View All Customers ->"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnviewAllTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnviewAllCus"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/money_green_dark"
        android:padding="5dp"
        android:text="Transaction History ->"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="Powered by ShreyLabs"
        android:textSize="14dp" />

</LinearLayout>